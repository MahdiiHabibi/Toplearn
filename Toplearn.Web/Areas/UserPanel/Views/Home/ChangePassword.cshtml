@model ChangePasswordViewModel

@{
	ViewBag.Title = "تغییر رمز عبور";
}

<partial name="_breadcrumb" />
<partial name="_ValidationScriptsPartial" />

<main>
	<div class="container">
		<div class="user-account">
			<div class="row">
				<div class="col-md-3 col-sm-4 col-xs-12">
					<aside>

						<partial name="_BoxOfImageInUserPanel" />

						<partial name="_DeskInUserPanel" />

					</aside>
				</div>
				<div class="col-md-9 col-sm-8 col-xs-12">

					<section class="user-account-content">
						<header><h1> ویرایش حساب کاربری </h1></header>
						<div class="inner form-layer">
							<form asp-action="ChangePassword" asp-controller="Home" method="post">

								<div class="row">
									<div class="col-md-7 col-sm-8 col-xs-12" style="margin-bottom: 13px;">
										<div class="input-group">
											<span class="input-group-addon" id="username"><i class="zmdi zmdi-lock"></i></span>
											<input type="password" class="form-control" asp-for="OldPassword" placeholder="رمز عبور فعلی" aria-describedby="password">
										</div>
										<span asp-validation-for="OldPassword"></span>
									</div>

									<div class="col-md-7 col-sm-8 col-xs-12" style="margin-bottom: 13px;">
										<div class="input-group">
											<span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
											<input type="password" class="form-control" asp-for="NewPassword" placeholder="جدید  رمز عبور " aria-describedby="password">
										</div>
										<span asp-validation-for="NewPassword"></span>
									</div>

									<div class="col-md-7 col-sm-8 col-xs-12" style="margin-bottom: 13px;">
										<div class="input-group">
											<span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
											<input type="password" class="form-control" asp-for="ReNewPassword" placeholder="جدید رمز عبور تکرار" aria-describedby="password">
										</div>
										<span asp-validation-for="ReNewPassword"></span>
									</div>

									<div class="col-md-7 col-sm-8 col-xs-12">
										<button class="btn btn-success"> تغییر رمز عبور  </button>
									</div>
								</div>

							</form>
						</div>
					</section>

				</div>
			</div>
		</div>
	</div>
</main>

