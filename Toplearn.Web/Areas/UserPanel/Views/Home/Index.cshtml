@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UserPanelViewModel

@{
	ViewBag.Title = "پنل کاربری" + " " + Model.FullName;
}

<partial name="_breadcrumb" />

<main>

	<div class="container">
		<div class="user-account">
			<div class="row">
				<div class="col-md-3 col-sm-4 col-xs-12">
					<aside>

						<partial name="_BoxOfImageInUserPanel" />

						<partial name="_DeskInUserPanel" />

					</aside>
				</div>
				<div class="col-md-9 col-sm-8 col-xs-12">
					<section class="user-account-content">
						<header><h1> داشبورد </h1></header>
						<div class="inner">
							<div class="account-information">
								<h3> اطلاعات کاربری </h3>
								<ul>
									<li> <i class="zmdi zmdi-account"></i> نام و نام خانوادگی : @Model.FullName </li>
									<li> <i class="zmdi zmdi-assignment-account"></i> نام کاربری :  @Model.UserName </li>
									<li> <i class="zmdi zmdi-email"></i> ایمیل : @Model.Email.CapitalizeFirstLetter() </li>
									@if (Model.UserDescription == null)
									{
										<li>
											<a asp-action="EditProfile" asp-controller="Home" asp-area="UserPanel">
												<i class="zmdi zmdi-edit"></i>
												توضیحات : برای ثبت یک توضیح مختصر برای خود کلیک کنید .
											</a>
										</li>
									}
									else
									{
										<li> <i class="zmdi zmdi-collection-bookmark"></i>  توضیحات : 
											<div class="ck-content">
												@Html.Raw(Model.UserDescription)
											</div>
											</li>
									}
									<li> <i class="zmdi zmdi-calendar-check"></i> تاریخ عضویت : @Model.DateTime.ToShamsi() </li>
									<li>
										<i class="zmdi zmdi-balance-wallet"></i> مانده ی کیف پول : @Model.WalletBalance.ToString("N0") ریال - معادل  (@(((Model.WalletBalance) / 10).ToString("N0")) تومان)

									</li>
								</ul>
							</div>
						</div>
					</section>
				</div>
			</div>
		</div>
	</div>

</main>

