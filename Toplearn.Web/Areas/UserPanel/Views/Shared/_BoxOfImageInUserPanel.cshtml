


<div class="avatar-layer">
	<div class="img-layer">
		<a href="" class="change-image"><i class="zmdi zmdi-edit"></i></a>
		<img src="@User.Claims.Single(x => x.Type == "ImageUrl").Value" alt="UserImages">
	</div>
	<div class="detail">
		<span>@User.Identity.Name </span>
		<span> عضویت : @(Convert.ToDateTime(User.Claims.Single(x => x.Type == "DateTimeOfRegister").Value).ToShamsi()) </span>
	</div>
</div>