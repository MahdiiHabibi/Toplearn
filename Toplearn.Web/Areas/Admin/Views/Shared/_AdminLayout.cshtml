
<!DOCTYPE html>
<html>
<head>
	<partial name="_MetaTagsOfAdminPages" />
	<title>پنل مدیریت | @ViewBag.Title</title>
	<partial name="_StylesOfAdminPages" />


</head>
<body class="hold-transition sidebar-mini">
	<div class="wrapper">

		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand   border-bottom">
			<!-- Left navbar links -->
			<ul class="navbar-nav">

				<li class="nav-item main-sidebar-buttuonOfRep">
					<a class="nav-link" id="ToggleMainMenu_Me" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block ">
					<a asp-action="Index" asp-controller="Home" asp-area="" class="nav-link">خانه</a>
				</li>
				<li class="nav-item d-none d-sm-inline-block ">
					<a asp-action="Index" asp-controller="Home" asp-area="UserPanel" class="nav-link">پنل کاربری </a>
				</li>
				<li class="nav-item d-none d-sm-inline-block ">
					<a asp-action="Index" asp-controller="Wallet" asp-area="UserPanel" class="nav-link">کیف پول </a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
					<a asp-action="Logout" asp-controller="Account" class="nav-link">خروج</a>
				</li>
			</ul>

			<!-- SEARCH FORM -->
			<form class="form-inline ml-3">
				<div class="input-group input-group-sm">
					<input class="form-control form-control-navbar" type="search" placeholder="جستجو" aria-label="Search">
					<div class="input-group-append">
						<button class="btn btn-navbar" type="submit">
							<i class="fa fa-search"></i>
						</button>
					</div>
				</div>
			</form>

		</nav>
		<!-- /.navbar -->
		<!-- Main Sidebar Container -->
		<partial name="_MainMenuOfAdminPages" />
		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			<!-- Content Header (Page header) -->
			<partial name="_breadcrumbOfAdminPages" />
			<!-- /.content-header -->
			<!-- Main content -->
			@RenderBody()
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->
		<footer class="main-footer position-fixed " style="bottom:2px; left:2px;">
			<strong>CopyLeft &copy; @DateTime.Now.Year -- <a href="/"> TopLearn </a></strong>
		</footer>
	</div>
	<!-- ./wrapper -->
	
	<partial name="_AlertForMassageOfAdminPages"/>
	<partial name="_ScriptsOfAdminPages" />
</body>
</html>
