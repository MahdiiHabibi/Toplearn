@model AddOffToCoursesViewModel

@{
	ViewBag.Title = "افزودن تخفیف به دوره ها";
	ViewBag.AddOffCourses = "active";
}


<!-- Main content -->
<section class="content">
	<form asp-action="AddOffToCourses" asp-controller="CoursesOff" asp-area="Admin" method="post">
		<div class="row">
			<div class="col-3">
				<div class="card card-success card-outline">
					<div class="card-body box-profile">

						<div class="form-group">
							<label for="OffPercent">
								درصد تخفیف
							</label>
							<input type="number" class="form-control" asp-for="OffPercent" placeholder="درصد تخفیف را وارد کنید">
						</div>
						
						<div class="form-group">
							<label for="OffEndDate">
								زمان پایان تخفیف
							</label>
							<input class="form-control" asp-for="OffEndDate" placeholder="زمان پایان تخفیف را وارد کنید">
						</div>

						<button type="submit" class="btn btn-success btn-block">
							<b>
								ثبت 
							</b>
						</button>

					</div>
					<!-- /.card-body -->
				</div>
			</div>
			<div class="col-1"></div>
			<div class="col-8">

				<ul>
					@foreach (var course in Model.Courses)
					{
						<li>
							<div class="form-group">
								<div class="form-check">
									<input class="form-check-input" type="checkbox" name="CoursesId" value="@course.Item1">
									<label class="form-check-label">@course.Item2</label>
								</div>
							</div>	
						</li>
					}
				</ul>

			</div>
		</div>
	</form>
</section>
