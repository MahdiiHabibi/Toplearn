@model AddOffToCategoriesViewModel

@{
	ViewBag.Title = "افزودن تخفیف جدید به گروه";
	ViewBag.AddOffCategories = "active";
}

<!-- Main content -->
<section class="content">
	<form action="/Admin/Offs/AddOffToCategories" method="post">
		<div class="row">
			<div class="col-3">
				<div class="card card-success card-outline">
					<div class="card-body box-profile">

						<div class="form-group">
							<label for="OffPercent">
								درصد تخفیف
							</label>
							<input type="number" class="form-control" asp-for="OffPercent" placeholder="درصد تخفیف را وارد کنید">
						</div>

						<div class="form-group">
							<label for="OffEndDate">
								زمان پایان تخفیف
							</label>
							<input class="form-control" asp-for="OffEndDate" placeholder="زمان پایان تخفیف را وارد کنید">
						</div>


						<button type="submit" class="btn btn-success btn-block">
							<b>
								ثبت
							</b>
						</button>
						<p></p>
						<div class="text-danger pr-3" asp-validation-summary="All"></div>

					</div>
					<!-- /.card-body -->
				</div>
			</div>
			<div class="col-1"></div>
			<div class="col-8">

				<ul>
					@foreach (var course in Model.Categories)
					{
						<li>
							<div class="form-group">
								<div class="form-check">
									<input class="form-check-input" type="checkbox" name="CategoriesId" value="@course.Item1">
									<label class="form-check-label">@course.Item2</label>
								</div>
							</div>
						</li>
					}
				</ul>

			</div>
		</div>
	</form>
</section>

@section Script
{
	<partial name="_ValidationScriptsPartial"/>
}
