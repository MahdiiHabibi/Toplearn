@model IEnumerable<Toplearn.DataLayer.Entities.Course.Category>


<div class="main-menu">
	<div class="container">
		<nav>
			<span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
			<ul>
				@foreach (var category in Model.Where(x => x.ParentCategoryId == null))
				{
					
					<li>
						<a asp-action="index" asp-controller="Course" asp-route-selectedGroups="@category.CategoryId"> @category.CategoryName </a>
						@if (category.ChildCategories != null && category.ChildCategories.Any())
						{
							<ul>
								@foreach (var childCategory in category.ChildCategories)
								{

									<li><a asp-action="index" asp-controller="Course" asp-route-selectedGroups="@childCategory.CategoryId"> @childCategory.CategoryName </a></li>

								}
							</ul>
						}
					</li>
				}
			</ul>
		</nav>
	</div>
</div>